const express = require('express');
const router = express.Router();
const lc_construccionController = require('../controllers/lc_construccionController');
const lc_construccionController = require('../controllers/lc_construccionController');




// Ruta para obtener todas las construcciones
router.get('/construcciones', lc_construccionController.getAllConstrucciones);
// Ruta para obtener una construccion por ID 
router.get('/construcciones/:id', lc_construccionController.getConstruccionesyId);
// Ruta para crear una nueva construccion
router.post('/construcciones',lc_construccionController.createConstrucciones);
// Ruta para actualizar una construccion
router.put('/construcciones/:id',lc_construccioncontroller.updateConstrucciones);
// Ruta para eliminar una construccion
router.delete('/construcciones/:id', lc_construccioncontroller.deleteConstrucciones);


module.exports = router;